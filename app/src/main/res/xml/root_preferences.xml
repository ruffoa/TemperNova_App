<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/basic_settings_header">

        <EditTextPreference
            app:key="@string/basic_settings_pref_name"
            app:title="@string/basic_settings_name"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/bluetooth_settings_header">

        <SwitchPreferenceCompat
            app:key="@string/bluetooth_pref_sync"
            app:title="@string/bluetooth_settings_sync" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/debug_settings_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/debug_settings_temp_graph" />

    </PreferenceCategory>

</PreferenceScreen>
